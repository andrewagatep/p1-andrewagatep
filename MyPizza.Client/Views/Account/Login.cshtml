@model MyPizza.Client.Models.AccountViewModel

<form action="/account/login" method="post">
  @Html.AntiForgeryToken()

  <label asp-for="@Model.Username">Username</label>
  <input type="text" asp-for="@Model.Username"/><br>
  @Html.ValidationMessageFor(avm => avm.Username)

  <label asp-for="@Model.Password">Password</label>
  <input type="text" asp-for="@Model.Password"><br>
  @Html.ValidationMessageFor(avm => avm.Password)

  @Html.RadioButtonFor(avm => avm.User, true)<br>

  <button type="reset">Clear</button>
  <button type="submit">Login</button>

</form>